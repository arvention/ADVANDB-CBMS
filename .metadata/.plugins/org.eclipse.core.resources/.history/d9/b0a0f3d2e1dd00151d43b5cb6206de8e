	public String query2Builder(){
		String sql = "SELECT id, mun, zone, brgy, purok, house_type, house_type_o, nbr, roof, "
				+ "wall, nofw, nnucfam, prog_slp, prog_slp_nmem, prog_fudforsch, prog_fudforsch_nmem, "
				+ "prog_fudforwrk, prog_fudforwrk_nmem, prog_cshforwrk, prog_cshforwrk_nmem, prog_spisc, "
				+ "prog_spisc_nmem, prog_cct, prog_cct_nmem, prog_arcdp, prog_arcdp_nmem, prog_cbep, prog_cbep_nmem, "
				+ "prog_phiheal_ofw, prog_phiheal_ofw_nmem, prog_phiheal_empl, prog_phiheal_empl_nmem, "
				+ "prog_phiheal_indiv, prog_phiheal_indiv_nmem, prog_phiheal_spon, prog_phiheal_spon_nmem, "
				+ "prog_phiheal_life, prog_phiheal_life_nmem, nprog";
		return sql;
	}
	
}
